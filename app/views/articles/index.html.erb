<div id="background-index">
  <div class="container px-4 py-4">
    <div class="row mb-4">
      <div class="col-12 d-flex justify-content-center">
        <%= button_to "NewsBot", chats_path(category: params[:category]), data: { turbo_method: :post }, class: "btn btn-primary rounded-pill" %>
      </div>
    </div>

    <div class="row row-cols-2">
      <% @articles.reverse_each do |article| %>
        <div class="card-article col mb-3">
          <div class="card h-100">
              <%= image_tag article.image_url, alt: "text" %>
              <div class="card-body">
              <h5 class="card-title"><strong><%= article.title %></strong></h5>
              <li class="list-group-item"><em><%= article.author %></em></li>
              <li class="list-group-item"><em><%= article.created_at.strftime("%d/%m/%Y") %></em></li>
              <br>
              <h5 class="card-summarize">Résumé :<em><%= article.summary %></em></h5>
              <br>
            <div class="card-body">
              <%= button_to "Generate a resume", summarize_article_article_path(article), class: "btn btn-dark rounded-pill position-absolute bottom-0 start-0 m-2" %>
              <%= link_to "Read this article", article_path(article), class: "btn btn-dark rounded-pill position-absolute bottom-0 end-0 m-2" %>
            </div>
          </div>
        </div>
    </div>
      <% end %>
  </div>
</div>
