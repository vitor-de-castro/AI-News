<div id="background">
  <div class="container-fluid px-4 py-4">
    <!-- Bouton New Chat en haut -->
    <div class="row mb-4">
      <div class="col-12 d-flex justify-content-center">
        <%= button_to "New chat", chats_path(category: params[:category]), class: "btn btn-primary" %>
      </div>
    </div>

    <!-- Cards d'articles -->
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-12 col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><strong><%= article.title %></strong></h5>
              <p class="card-text"><%= article.author %></p>
              <%= link_to "Read this article", article_path(article), class: "btn btn-dark" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
